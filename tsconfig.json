{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2020",
    "jsx": "react",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": ["dom", "es2019", "es2020"],
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["build", "node_modules"]
}
